{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES5",
            "ES2015",
            "ES2022",
            "ESNext",
            "DOM",
            "DOM.Iterable",
        ],
        "baseUrl": "./",
        "types": [
            "vite/client"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        // 不禁止隐藏 any
        "noImplicitAny": false,
        "noImplicitThis": false,
        // 忽略大小写
        "forceConsistentCasingInFileNames": false,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/app.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}